.container
  .row
    .well.text-center
      h1 #{current_user.username}'s page
      = link_to "Edit", edit_user_path(@user)
    .well.col-xs-12.col-sm-6.text-center
      h3  Your gallery reviews
      - current_user.gallery_comments.each do |comment|
        p = comment.content
    .well.col-xs-12.col-sm-6.text-center
      h3 Your exhibition reviews
      - current_user.exhibition_comments.each do |comment|
        p = comment.content
    .well.col-xs-12.col-sm-6.text-center
      h3 Your images
    .well.col-xs-12.col-sm-6.text-center
      h3 Other stuff